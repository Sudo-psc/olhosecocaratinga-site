# ===========================================
# .env.local - Configurações de Produção
# ===========================================
# Copie este arquivo para .env.local e preencha os valores

# Sanity Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=seu-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2025-01-01
SANITY_API_READ_TOKEN=seu-token-de-leitura
SANITY_API_WRITE_TOKEN=seu-token-de-escrita

# Revalidação
SANITY_REVALIDATE_SECRET=gere-um-token-aleatorio-seguro

# URLs de Produção
NEXT_PUBLIC_SITE_URL=https://olhosecocaratinga.com.br
NEXT_PUBLIC_SITE_DOMAIN=olhosecocaratinga.com.br

# Ambiente
NODE_ENV=production
