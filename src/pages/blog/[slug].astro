---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import { client, urlFor } from '../../lib/sanity';
import { PortableText } from "astro-portabletext";
import groq from 'groq';

const { slug } = Astro.params;

let post = null;

try {
  if (import.meta.env.PUBLIC_SANITY_PROJECT_ID && slug) {
    post = await client.fetch(groq`*[_type == "post" && slug.current == $slug][0] {
      title,
      publishedAt,
      mainImage,
      body,
      author->{name, image},
      categories[]->{title}
    }`, { slug });
  }
} catch (e) {
  console.error("Erro ao carregar post:", e);
}

if (!post) {
  return Astro.redirect('/404');
}
---

<Layout title={`${post.title} | Blog Saraiva Vision`} description={post.excerpt || post.title}>
  <article class="bg-white min-h-screen pb-20">
    <!-- Header com Imagem -->
    <div class="relative h-[400px] md:h-[500px] w-full bg-blue-900">
        {post.mainImage ? (
            <img 
                src={urlFor(post.mainImage!)!.width(1200).height(600).url()} 
                alt={post.title} 
                class="w-full h-full object-cover opacity-80"
            />
        ) : (
             <div class="absolute inset-0 bg-[url('/pattern.svg')] opacity-20"></div>
        )}
        <div class="absolute inset-0 bg-gradient-to-t from-white via-transparent to-transparent"></div>
    </div>

    <div class="container mx-auto px-6 relative -mt-32 z-10">
        <div class="bg-white rounded-3xl shadow-xl p-8 md:p-12 border border-gray-100 max-w-4xl mx-auto">
            
            <!-- Meta Data -->
            <div class="flex flex-wrap text-sm gap-4 text-gray-500 mb-6 font-medium">
                 {post.categories && post.categories.length > 0 && (
                    <span class="text-blue-600 bg-blue-50 px-3 py-1 rounded-full">{post.categories[0].title}</span>
                )}
                <span class="flex items-center gap-2">
                    üìÖ {new Date(post.publishedAt).toLocaleDateString('pt-BR', { day: 'numeric', month: 'long', year: 'numeric' })}
                </span>
                {post.author && (
                    <span class="flex items-center gap-2">
                        ‚úçÔ∏è {post.author.name}
                    </span>
                )}
            </div>

            <!-- Title -->
            <h1 class="text-3xl md:text-5xl font-bold text-[#003D7A] mb-8 leading-tight">
                {post.title}
            </h1>

            <!-- Content -->
            <div class="prose prose-lg prose-blue max-w-none text-gray-700 leading-relaxed">
                <PortableText value={post.body} />
            </div>

            <!-- Share/Footer -->
            <div class="mt-12 pt-8 border-t border-gray-100 flex justify-between items-center">
                <a href="/blog" class="text-gray-500 hover:text-[#003D7A] font-semibold flex items-center gap-2 transition-colors">
                    ‚Üê Voltar para o Blog
                </a>
                <a href="/contato" class="btn-premium btn-premium-primary text-sm px-6 py-2">
                    Agendar Avalia√ß√£o
                </a>
            </div>
        </div>
    </div>
  </article>
</Layout>
