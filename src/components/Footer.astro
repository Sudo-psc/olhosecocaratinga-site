---
const currentYear = new Date().getFullYear();

const contact = {
    phone: "(33) 99860-1427",
    whatsapp: "5533998601427",
    email: "contato@saraivavision.com.br",
    address: "Rua Catarina Maria Passos, 97 - Santa Zita, Caratinga - MG"
};

const links = {
    institutional: [
        { name: "Início", href: "/" },
        { name: "Olho Seco", href: "#olho-seco" },
        { name: "Exames", href: "#exames" },
        { name: "Tratamentos", href: "#tratamentos" },
        { name: "Vídeos", href: "/videos" },
        { name: "Contato", href: "#contato" }
    ],
    services: [
        { name: "Meibografia", href: "/exames#meibografia" },
        { name: "Meniscometria", href: "/exames#meniscometria" },
        { name: "E-EYE IRPL", href: "/tratamentos#e-eye" }
    ],
    legal: [
        { name: "Política de Privacidade", href: "/privacidade" },
        { name: "Termos de Uso", href: "/termos" }
    ]
