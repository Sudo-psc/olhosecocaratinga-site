---

<footer class="bg-gray-950 text-gray-300 font-sans">
    <!-- Main Footer -->
    <div class="container py-20">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-16">
            <!-- Brand -->
            <div class="lg:col-span-1">
                <a href="/" class="text-3xl font-bold font-heading text-white mb-6 block">
                    Saraiva Vision
                </a>
                <p class="text-gray-400 mb-8 leading-relaxed">
                    Referência em tratamento especializado de olho seco e tecnologia IRPL em Caratinga e região.
                </p>
                
                <!-- Social Links -->
                <div class="flex space-x-4">
                    {social.map(item => (
                        <a 
                            href={item.href}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-blue-600 transition-colors"
                            aria-label={item.name}
                        >
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" set:html={item.icon} />
                        </a>
                    ))}
                </div>
            </div>
            
            <!-- Institutional Links -->
            <div>
                <h3 class="text-white font-semibold text-lg mb-6">Institucional</h3>
                <ul class="space-y-3">
                    {links.institutional.map(link => (
                        <li>
                            <a href={link.href} class="hover:text-white transition-colors">
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
            
            <!-- Services Links -->
            <div>
                <h3 class="text-white font-semibold text-lg mb-6">Serviços</h3>
                <ul class="space-y-3">
                    {links.services.map(link => (
                        <li>
                            <a href={link.href} class="hover:text-white transition-colors">
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
            
            <!-- Contact -->
            <div>
                <h3 class="text-white font-semibold text-lg mb-6">Contato</h3>
                <ul class="space-y-4">
                    <li class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-blue-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        <span class="text-gray-400">{contact.address}</span>
                    </li>
                    <li>
                        <a href={`tel:${contact.phone.replace(/\D/g, '')}`} class="flex items-center gap-3 hover:text-white transition-colors">
                            <svg class="w-5 h-5 text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            {contact.phone}
                        </a>
                    </li>
                    <li>
                        <a href={`mailto:${contact.email}`} class="flex items-center gap-3 hover:text-white transition-colors">
                            <svg class="w-5 h-5 text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            {contact.email}
                        </a>
                    </li>
                </ul>
                
                <!-- WhatsApp Button -->
                <a 
                    href={`https://wa.me/${contact.whatsapp}?text=Olá! Gostaria de agendar uma consulta.`}
                    target="_blank"
                    rel="noopener"
                    class="mt-6 inline-flex items-center gap-2 px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors"
                >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                    WhatsApp
                </a>
            </div>
        </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-gray-800">
        <div class="container mx-auto px-6 py-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <p class="text-gray-500 text-sm text-center md:text-left">
                    © {currentYear} Clínica Oftalmológica Caratinga. Todos os direitos reservados.
                </p>
                <div class="flex gap-6 text-sm">
                    {links.legal.map(link => (
                        <a href={link.href} class="text-gray-500 hover:text-white transition-colors">
                            {link.name}
                        </a>
                    ))}
                </div>
            </div>
        </div>
    </div>
</footer>
