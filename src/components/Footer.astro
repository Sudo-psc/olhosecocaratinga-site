const mainSiteUrl = "https://saraivavision.com.br";


const siteLinks = [
    { name: "Início", href: "/" },
    { name: "Tratamentos", href: "/tratamentos" },
    { name: "Exames", href: "/exames" },
    { name: "Vídeos Educativos", href: "/videos" },
    { name: "Sobre a Clínica", href: "/sobre" },
    { name: "Blog", href: "/blog" }
