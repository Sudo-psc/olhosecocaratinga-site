      {!isTestPage && (
        <a href="/testerapido" class="hidden lg:flex items-center gap-2 px-4 py-2 bg-cyan-50 text-cyan-600 rounded-lg hover:bg-cyan-100 font-bold transition-colors text-sm border border-cyan-200 shadow-sm animate-pulse-slow">
