---
const links = [
  { name: "Início", href: "/" },
  { name: "Olho Seco", href: "/olho-seco" },
  { name: "Exames", href: "/exames" },
  { name: "Tratamentos", href: "/tratamentos" },
  { name: "Vídeos", href: "/videos" },
  { name: "Contato", href: "/contato" },
];
---

<header class="fixed w-full z-50 transition-all duration-300 glass border-b border-gray-100 shadow-sm">
  <div class="container py-4 flex justify-between items-center">
    <a href="/" class="flex flex-col group transition-transform hover:scale-[1.02]">
      <span class="text-2xl font-bold font-heading text-[var(--primary)]">Saraiva Vision</span>
      <span class="text-[10px] uppercase tracking-[0.2em] text-[var(--primary-light)] font-bold">Olho Seco Caratinga</span>
    </a>

    <nav class="hidden md:flex items-center gap-10">
      {links.map((link) => (
        <a 
          href={link.href} 
          class="text-[var(--text-muted)] hover:text-[var(--primary)] font-semibold text-sm transition-all relative group"
        >
          {link.name}
          <span class="absolute inset-x-0 -bottom-1 h-0.5 bg-[var(--primary)] scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></span>
        </a>
      ))}
      <a href="#contato" class="btn-premium btn-premium-primary !py-2.5 !px-6 text-sm shadow-md">
        Agendar Consulta
      </a>
    </nav>

    <!-- Mobile Menu Button (Hamburger) -->
    <button id="mobile-menu-btn" class="md:hidden text-gray-700 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden absolute top-full left-0 w-full bg-white border-b border-gray-100 shadow-xl overflow-hidden">
    <div class="flex flex-col p-6 space-y-3">
      {links.map((link) => (
        <a 
          href={link.href} 
          class="text-[var(--text-main)] font-semibold p-4 block rounded-xl hover:bg-[var(--accent)] transition-all"
        >
          {link.name}
        </a>
      ))}
      <a href="#contato" class="btn-premium btn-premium-primary w-full mt-4">
        Agendar Consulta
      </a>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
